<!-- Everything in here will be passed through as 'body' to our boilerplate -->
<% layout('layouts/boilerplate') %>

<!-- We have access to campground from app.js, so show that campground's title and location (for now) -->
<h1><%= campground.title %></h1>
<h2><%= campground.location %></h2>
<img src="<%= campground.image %>" alt="">
<p><%= campground.description %></p>
<p>
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
        <button>
            Delete
        </button>
    </form>
</p>
<footer>
    <p>
        <a href="/campgrounds/<%= campground._id %>/edit">Edit</a>
    </p>

    <a href="/campgrounds">All campgrounds</a>
</footer>
